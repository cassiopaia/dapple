{
  "title": "dappfile definition",
  "description": "dappfile definition",
  "type": "object",
  "required": [ "name", "layout", "version" ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "$ref": "#/definitions/name"
    },

    "version": {
      "$ref": "#/definitions/version",
      "default": "1.0.0"
    },
    "summary": {
      "$ref": "#/definitions/summary"
    },

    "files": {
      "$ref": "#/definitions/files"
    },

    "scripts": {
      "$ref": "#/definitions/scripts"
    },

    "tags": {
      "$ref": "#/definitions/tags",
      "default": []
    },

    "layout": {
      "title": "Directory Structure",
      "description": "Specifies where relevant files are located",
      "type": "object",
      "required": [ "sol_sources", "build_dir" ],
      "additionalProperties": false,
      "properties": {
        "sol_sources": {
          "title": "sol sources",
          "description": "Root directory of the solidity source files.",
          "type": "string",
          "default": "contracts"
        },
        "build_dir": {
          "title": "Build Directory",
          "description": "Directory, where all the build files should be stored.",
          "type": "string",
          "default": "build"
        }
      }
    },

    "dependencies": {
      "$ref": "#/definitions/dependencies",
      "default": {}
    },

    "ignore": {
      "title": "Ignore",
      "description": "Ignore files and directories",
      "type": "array",
      "items": {
        "title": "Name of file/directory",
        "type": "string"
      },
      "default": []
    },

    "environments": {
      "$ref": "definitions#/definitions/environments"
    }

  },

  "definitions": {
    "dependencies": {
      "title": "Dependencies",
      "description": "Direct dependency list",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "oneOf": [{
            "title": "Path",
            "description": "Dependency path.",
            "type": "string"
          },
          {
            "type": "object",
            "aditionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            }
          }]
        }
      }
    },

    "depGitUrl": {
      "type": "string",
      "pattern": "^(.+.git)(?:@([a-z0-9]+))$"
    },

    "depPath": {
      "type": "string",
      "pattern": ""
    }
  },

  "tags": {
    "type": "array",
    "title": "Tags",
    "items": {
      "type": "string"
    }
  },

  "summary": {
    "title": "Description",
    "description": "Short summary of the package",
    "type": "string",
    "pattern": "^.{0,80}$"
  },

  "name": {
    "title": "Package Name",
    "description": "Used for creating its dapple_packages directory",
    "type": "string"
  },

  "version": {
    "type": "string",
    "title": "semver",
    "pattern": "^\\d+\\.\\d+.\\d+$"
  },

  "files":{
    "title": "files",
    "description": "which which are going to get included to a package",
    "items": {
      "type": "string",
      "title": "path"
    }
  },

  "scripts": {
    "title": "scripts",
    "descriptions": "scripts which are going to get included to a package",
    "type": "array",
    "items": {
      "type": "path"
    }
  }

}
